@model IEnumerable<EquipShare.Models.Equipment>

@{
    ViewData["Title"] = "My Equipment";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>My Equipment</h2>
            <p class="text-muted mb-0">Manage your equipment listings</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Booking" asp-action="MyRequests" class="btn btn-outline-info position-relative">
                <i class="bi bi-inbox"></i> Booking Requests
                @if (ViewBag.PendingRequestsCount > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @ViewBag.PendingRequestsCount
                        <span class="visually-hidden">pending requests</span>
                    </span>
                }
            </a>
            <a asp-controller="Equipment" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Equipment
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var equipment in Model)
            {
                <div class="col-lg-6 col-xl-4">
                    <div class="card h-100 shadow-sm">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(equipment.ImageUrl))
                            {
                                var equipmentImageUrls = equipment.ImageUrl.Split('|').Where(url => !string.IsNullOrEmpty(url)).ToList();
                                var firstImageUrl = equipmentImageUrls.Any() ? equipmentImageUrls.First() : equipment.ImageUrl;
                                <img src="@firstImageUrl" class="card-img-top" alt="@equipment.Name"
                                     style="height: 200px; object-fit: cover;">
                                @if (equipmentImageUrls.Count > 1)
                                {
                                    <div class="position-absolute bottom-0 end-0 m-2">
                                        <span class="badge bg-dark">
                                            <i class="bi bi-images me-1"></i>@equipmentImageUrls.Count
                                        </span>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                                     style="height: 200px;">
                                    <i class="bi bi-image display-4 text-muted"></i>
                                </div>
                            }
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge @(equipment.IsAvailable ? "bg-success" : "bg-danger")">
                                    <i class="bi bi-@(equipment.IsAvailable ? "check" : "x")-circle"></i>
                                    @(equipment.IsAvailable ? "Available" : "Unavailable")
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@equipment.Name</h5>
                            <p class="card-text text-muted small">
                                @if (equipment.Description != null && equipment.Description.Length > 100)
                                {
                                    @(equipment.Description.Substring(0, 100))
                                }
                                else
                                {
                                    @equipment.Description
                                }
                            </p>
                            <div class="mb-2">
                                <span class="badge bg-primary">@equipment.Category?.Name</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <h4 class="text-primary mb-0">₹@equipment.PricePerDay.ToString("F2")</h4>
                                    <small class="text-muted">per day</small>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> @equipment.Location
                                    </small>
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-controller="Equipment" asp-action="Details" asp-route-id="@equipment.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-controller="Equipment" asp-action="Edit" asp-route-id="@equipment.Id"
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Equipment" asp-action="Delete" asp-route-id="@equipment.Id"
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Statistics Cards -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@Model.Count()</h3>
                        <p class="text-muted mb-0">Total Listed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@Model.Count(e => e.IsAvailable)</h3>
                        <p class="text-muted mb-0">Available</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@Model.Count(e => !e.IsAvailable)</h3>
                        <p class="text-muted mb-0">Rented</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">₹@Model.Sum(e => e.PricePerDay).ToString("F2")</h3>
                        <p class="text-muted mb-0">Total Value/Day</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-box display-4 text-muted mb-3"></i>
            <h4>No Equipment Listed</h4>
            <p class="text-muted mb-4">
                You haven't listed any equipment yet. Start by adding your first item to begin renting.
            </p>
            <a asp-controller="Equipment" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Your First Equipment
            </a>
        </div>
    }
</div>