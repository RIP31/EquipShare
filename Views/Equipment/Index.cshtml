@model IEnumerable<EquipShare.Models.Equipment>

@{
    ViewData["Title"] = "Browse Equipment";
}

<div class="container py-5">
    <!-- Search and Filter Section -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-lg-5 col-md-12">
                    <label class="form-label fw-semibold">Search</label>
                    <input type="text" name="search" class="form-control"
                           placeholder="Search equipment by name or description..."
                           value="@ViewBag.SearchQuery">
                </div>
                <div class="col-lg-3 col-md-6">
                    <label class="form-label fw-semibold">Category</label>
                    <select name="categoryId" class="form-select">
                        <option value="">All Categories</option>
                        <option value="1" selected="@(ViewBag.CategoryId == 1)">Construction & Tools</option>
                        <option value="2" selected="@(ViewBag.CategoryId == 2)">Outdoor & Gardening</option>
                        <option value="4" selected="@(ViewBag.CategoryId == 4)">Electronics & Tech</option>
                        <option value="5" selected="@(ViewBag.CategoryId == 5)">Events & Party Supplies</option>
                        <option value="8" selected="@(ViewBag.CategoryId == 8)">Miscellaneous</option>
                    </select>
                </div>
                <div class="col-lg-3 col-md-6">
                    <label class="form-label fw-semibold">Sort By</label>
                    <select name="sort" class="form-select">
                        <option value="recent" selected="@(ViewBag.SortBy == null || ViewBag.SortBy == "recent")">Most Recent</option>
                        <option value="priceLow" selected="@(ViewBag.SortBy == "priceLow")">Price: Low to High</option>
                        <option value="priceHigh" selected="@(ViewBag.SortBy == "priceHigh")">Price: High to Low</option>
                    </select>
                </div>
                <div class="col-lg-1 col-md-12">
                    <button type="submit" class="btn btn-gradient w-100">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Count -->
    <div class="mb-3">
        @if (Model != null && Model.Any())
        {
            <p class="text-muted">Showing <strong>@Model.Count()</strong> equipment item@(Model.Count() > 1 ? "s" : "")</p>
        }
        else
        {
            <p class="text-muted">No equipment found</p>
        }
    </div>

    <!-- Equipment Grid -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var equipment in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow hover-card">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(equipment.ImageUrl))
                            {
                                var browseImageUrls = equipment.ImageUrl.Split('|').Where(url => !string.IsNullOrEmpty(url)).ToList();
                                var browseFirstImage = browseImageUrls.Any() ? browseImageUrls.First() : equipment.ImageUrl;
                                <img src="@browseFirstImage" class="card-img-top rounded-top" alt="@equipment.Name"
                                     style="height: 220px; object-fit: cover;">
                                @if (browseImageUrls.Count > 1)
                                {
                                    <div class="position-absolute bottom-0 end-0 m-2">
                                        <span class="badge bg-dark">
                                            <i class="bi bi-images me-1"></i>@browseImageUrls.Count
                                        </span>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light rounded-top"
                                     style="height: 220px;">
                                    <i class="bi bi-image display-4 text-muted"></i>
                                </div>
                            }
                    <span class="badge bg-gradient position-absolute top-0 end-0 m-2 px-3 py-2 rounded-pill">
                        <i class="bi bi-check-circle"></i> Available
                    </span>
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="fw-bold mb-2">@equipment.Name</h5>
                    <p class="text-muted small flex-grow-1">
                        @((equipment.Description?.Length > 100)
                                                ? equipment.Description.Substring(0, 100) + "..."
                                                : equipment.Description)
                    </p>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="badge bg-light text-dark">@equipment.Category?.Name</span>
                        <h5 class="mb-0 text-gradient">â‚¹@equipment.PricePerDay.ToString("F2")/day</h5>
                    </div>
                    <div class="d-flex justify-content-between text-muted small mb-3">
                        <span><i class="bi bi-geo-alt"></i> @equipment.Location</span>
                        <span><i class="bi bi-calendar"></i> @equipment.CreatedDate.ToString("MMM dd")</span>
                    </div>
                    <a asp-controller="Equipment" asp-action="Details" asp-route-id="@equipment.Id"
                       class="btn btn-outline-gradient w-100 mt-auto">
                        <i class="bi bi-eye"></i> View Details
                    </a>
                </div>
            </div>
        </div>
                }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-box-seam display-4 text-muted mb-3"></i>
                <h4>No Equipment Found</h4>
                <p class="text-muted">Try adjusting your search filters or browse all equipment.</p>
                <a asp-controller="Equipment" asp-action="Index" class="btn btn-gradient">
                    <i class="bi bi-arrow-left"></i> Browse All Equipment
                </a>
            </div>
        }
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.1);
        }

    .bg-gradient {
        background: linear-gradient(90deg, #4f46e5, #06b6d4);
        color: #fff !important;
    }

    .btn-gradient {
        background: linear-gradient(90deg, #4f46e5, #06b6d4);
        border: none;
        color: #fff;
    }

        .btn-gradient:hover {
            opacity: 0.9;
        }

    .btn-outline-gradient {
        border: 2px solid transparent;
        background-image: linear-gradient(#fff, #fff), linear-gradient(90deg, #4f46e5, #06b6d4);
        background-origin: border-box;
        background-clip: content-box, border-box;
        color: #4f46e5;
    }

        .btn-outline-gradient:hover {
            background: linear-gradient(90deg, #4f46e5, #06b6d4);
            color: #fff;
        }

    .text-gradient {
        background: linear-gradient(90deg, #4f46e5, #06b6d4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
