@model IEnumerable<EquipShare.Models.Equipment>

@{
    ViewData["Title"] = "Browse Equipment";
}

<div class="container py-4">
    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Search Equipment</label>
                            <input type="text" name="search" class="form-control"
                                   placeholder="Search by name or description..."
                                   value="@ViewBag.SearchQuery">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Category</label>
                            <select name="categoryId" class="form-select">
                                <option value="">All Categories</option>
                                <option value="1" selected="@(ViewBag.CategoryId != null && ViewBag.CategoryId == 1)">Construction</option>
                                <option value="2" selected="@(ViewBag.CategoryId != null && ViewBag.CategoryId == 2)">Audio/Visual</option>
                                <option value="3" selected="@(ViewBag.CategoryId != null && ViewBag.CategoryId == 3)">Party & Events</option>
                                <option value="4" selected="@(ViewBag.CategoryId != null && ViewBag.CategoryId == 4)">Tools</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary d-block">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Count -->
    <div class="row mb-3">
        <div class="col-12">
            <p class="text-muted mb-0">
                @if (Model != null && Model.Any())
                {
                    <span>Showing @Model.Count() equipment item@(Model.Count() > 1 ? "s" : "")</span>
                }
                else
                {
                    <span>No equipment found</span>
                }
            </p>
        </div>
    </div>

    <!-- Equipment Grid -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var equipment in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(equipment.ImageUrl))
                            {
                                <img src="@equipment.ImageUrl" class="card-img-top" alt="@equipment.Name"
                                     style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                                     style="height: 200px;">
                                    <i class="bi bi-image display-4 text-muted"></i>
                                </div>
                            }
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Available
                                </span>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@equipment.Name</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @if (equipment.Description != null && equipment.Description.Length > 100)
                                {
                                    @(equipment.Description.Substring(0, 100))
                                }
                                else
                                {
                                    @equipment.Description
                                }
                            </p>
                            <div class="mb-2">
                                <span class="badge bg-primary">@equipment.Category?.Name</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <h4 class="text-primary mb-0">â‚¹@equipment.PricePerDay.ToString("F2")</h4>
                                    <small class="text-muted">per day</small>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> @equipment.Location
                                    </small>
                                </div>
                            </div>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-person"></i> @equipment.Owner?.FirstName @equipment.Owner?.LastName
                                    </small>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> @equipment.CreatedDate.ToString("MMM dd")
                                    </small>
                                </div>
                                <a asp-controller="Equipment" asp-action="Details" asp-route-id="@equipment.Id"
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-search display-4 text-muted mb-3"></i>
                    <h4>No Equipment Found</h4>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchQuery) || ViewBag.CategoryId != null)
                        {
                            <span>Try adjusting your search criteria or browse all equipment.</span>
                        }
                        else
                        {
                            <span>No equipment is currently available for rent.</span>
                        }
                    </p>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchQuery) || ViewBag.CategoryId != null)
                    {
                        <a asp-controller="Equipment" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> Browse All Equipment
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
.hover-card:hover {
    transform: translateY(-2px);
    transition: transform 0.2s ease-in-out;
}
</style>