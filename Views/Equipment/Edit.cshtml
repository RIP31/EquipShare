@model EquipShare.Models.ViewModels.EquipmentViewModel

@{
    ViewData["Title"] = "Edit Equipment";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit Equipment
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Equipment Name *</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter equipment name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">Category *</label>
                                <select asp-for="CategoryId" class="form-select">
                                    <option value="">Select a category</option>
                                    <option value="1">Construction</option>
                                    <option value="2">Audio/Visual</option>
                                    <option value="3">Party & Events</option>
                                    <option value="4">Tools</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Describe your equipment, its condition, and any special instructions..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PricePerDay" class="form-label">Price Per Day *</label>
                                <div class="input-group">
                                    <span class="input-group-text">â‚¹</span>
                                    <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" min="0.01" max="10000" />
                                </div>
                                <span asp-validation-for="PricePerDay" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Location" class="form-label">Location</label>
                                <input asp-for="Location" class="form-control" placeholder="City, Area" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Current Image Display -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Image</label>
                                <div class="d-flex align-items-center gap-3">
                                    <img src="@Model.ImageUrl" alt="Current equipment image"
                                         style="width: 100px; height: 100px; object-fit: cover; border-radius: 8px;">
                                    <div class="form-text">
                                        <small class="text-muted">Leave the image field empty to keep the current image.</small>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">Change Image (Optional)</label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                            <div class="form-text">
                                <small class="text-muted">
                                    Accepted formats: JPG, JPEG, PNG, GIF. Maximum file size: 5MB.<br>
                                    Upload a new image to replace the current one.
                                </small>
                            </div>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Update Guidelines:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Only change fields that need updating</li>
                                <li>Ensure your equipment is still in good working condition</li>
                                <li>Update photos if the equipment's appearance has changed</li>
                                <li>Review and update pricing if market rates have changed</li>
                            </ul>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check2"></i> Update Equipment
                            </button>
                            <a asp-controller="Equipment" asp-action="MyEquipment" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to My Equipment
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>