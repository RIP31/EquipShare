@model EquipShare.Models.ViewModels.EquipmentViewModel

@{
    ViewData["Title"] = "Add New Equipment";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Add New Equipment
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Equipment Name *</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter equipment name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">Category *</label>
                                <select asp-for="CategoryId" class="form-select">
                                    <option value="">Select a category</option>
                                    <option value="1">Construction</option>
                                    <option value="2">Audio/Visual</option>
                                    <option value="3">Party & Events</option>
                                    <option value="4">Tools</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Describe your equipment, its condition, and any special instructions..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PricePerDay" class="form-label">Price Per Day *</label>
                                <div class="input-group">
                                    <span class="input-group-text">â‚¹</span>
                                    <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" min="0.01" max="10000" />
                                </div>
                                <span asp-validation-for="PricePerDay" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Location" class="form-label">Location</label>
                                <input asp-for="Location" class="form-control" placeholder="City, Area" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">Equipment Image</label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                            <div class="form-text">
                                <small class="text-muted">
                                    Accepted formats: JPG, JPEG, PNG, GIF. Maximum file size: 5MB.
                                </small>
                            </div>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Before you list:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Ensure your equipment is in good working condition</li>
                                <li>Take clear photos showing the equipment from multiple angles</li>
                                <li>Be available to respond to booking requests promptly</li>
                                <li>Have a clear pickup and return policy</li>
                            </ul>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check2"></i> List Equipment
                            </button>
                            <a asp-controller="Equipment" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Browse
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
