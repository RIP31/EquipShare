@model IEnumerable<EquipShare.Models.Equipment>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section text-white">
    <div class="container text-center text-lg-start">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="mb-4">Rent Smarter. <br> Share Equipment Easily.</h1>
                <p class="mb-4">Save money and connect with your community by renting tools, machinery, and equipment near you.</p>
                <a asp-controller="Equipment" asp-action="Index" class="btn btn-light btn-lg me-2">
                    <i class="bi bi-search"></i> Browse Equipment
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-person-plus"></i> Get Started
                </a>
            </div>
            <div class="col-lg-6 d-none d-lg-block text-center">
                <img src="/images/hero-tools.svg" alt="EquipShare" class="img-fluid" style="max-height: 350px;">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <h2 class="fw-bold">Why Choose EquipShare?</h2>
            <p class="text-muted">A smarter way to access the tools you need</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-shield-check display-4 text-success mb-3"></i>
                    <h5>Trusted & Secure</h5>
                    <p class="text-muted">Verified users, safe transactions, and secure payments.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-currency-dollar display-4 text-warning mb-3"></i>
                    <h5>Affordable</h5>
                    <p class="text-muted">Rent instead of buy and save money on equipment costs.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-people display-4 text-info mb-3"></i>
                    <h5>Community</h5>
                    <p class="text-muted">Connect with locals and support small businesses.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Equipment -->
@if (Model != null && Model.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-4">
                <h2 class="fw-bold">Featured Equipment</h2>
                <p class="text-muted">Popular items available right now</p>
            </div>
            <div class="row g-4">
                @foreach (var equipment in Model.Take(6))
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="position-relative">
                                @if (!string.IsNullOrEmpty(equipment.ImageUrl))
                                {
                                    <img src="@equipment.ImageUrl" class="card-img-top" alt="@equipment.Name"
                                         style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light"
                                         style="height: 200px;">
                                        <i class="bi bi-image display-4 text-muted"></i>
                                    </div>
                                }
                                <span class="badge bg-success position-absolute top-0 end-0 m-2">Available</span>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@equipment.Name</h5>
                                <p class="card-text text-muted small">
                                    @(equipment.Description?.Length > 80 ? equipment.Description.Substring(0, 80) + "..." : equipment.Description)
                                </p>
                                <div class="mb-2"><span class="badge bg-primary">@equipment.Category?.Name</span></div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="text-primary mb-0">₹@equipment.PricePerDay.ToString("F2") <small class="text-muted fs-6">/day</small></h4>
                                    <a asp-controller="Equipment" asp-action="Details" asp-route-id="@equipment.Id" class="btn btn-outline-primary btn-sm">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a asp-controller="Equipment" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-grid-3x3-gap"></i> View All Equipment
                </a>
            </div>
        </div>
    </section>
}
