@model EquipShare.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Booking" asp-action="MyBookings">My Bookings</a></li>
                    <li class="breadcrumb-item active">Booking #@Model.Id</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Booking Details</h4>
                    <span class="badge fs-6 p-2
                        @(Model.Status == "Pending" ? "bg-warning" :
                          Model.Status == "Approved" ? "bg-success" :
                          Model.Status == "Rejected" ? "bg-danger" :
                          Model.Status == "Completed" ? "bg-info" : "bg-secondary")">
                        @Model.Status
                    </span>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Equipment Details</h6>
                            <div class="d-flex align-items-start mb-3">
                                @if (!string.IsNullOrEmpty(Model.Equipment?.ImageUrl))
                                {
                                    <img src="@Model.Equipment.ImageUrl" class="me-3 rounded"
                                         alt="@Model.Equipment.Name" style="width: 80px; height: 80px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="me-3 bg-light rounded d-flex align-items-center justify-content-center"
                                         style="width: 80px; height: 80px;">
                                        <i class="bi bi-image text-muted"></i>
                                    </div>
                                }
                                <div>
                                    <h5 class="mb-1">@Model.Equipment?.Name</h5>
                                    <p class="text-muted mb-1">@Model.Equipment?.Category?.Name</p>
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-person"></i> @Model.Equipment?.Owner?.FirstName @Model.Equipment?.Owner?.LastName
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6>Rental Period</h6>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Start Date:</span>
                                    <strong class="text-primary">@Model.StartDate.ToString("MMM dd, yyyy")</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>End Date:</span>
                                    <strong class="text-primary">@Model.EndDate.ToString("MMM dd, yyyy")</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Total Days:</span>
                                    <strong>@((Model.EndDate - Model.StartDate).Days + 1) day@(((Model.EndDate - Model.StartDate).Days + 1) > 1 ? "s" : "")</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Booking Information</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td>Booking ID:</td>
                                    <td><strong>#@Model.Id</strong></td>
                                </tr>
                                <tr>
                                    <td>Booked On:</td>
                                    <td>@Model.CreatedDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</td>
                                </tr>
                                <tr>
                                    <td>Status:</td>
                                    <td>
                                        <span class="badge
                                            @(Model.Status == "Pending" ? "bg-warning" :
                                              Model.Status == "Approved" ? "bg-success" :
                                              Model.Status == "Rejected" ? "bg-danger" :
                                              Model.Status == "Completed" ? "bg-info" : "bg-secondary")">
                                            @Model.Status
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>Pricing</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td>Price per day:</td>
                                    <td>₹@Model.Equipment?.PricePerDay.ToString("F2")</td>
                                </tr>
                                <tr>
                                    <td>Number of days:</td>
                                    <td>@((Model.EndDate - Model.StartDate).Days + 1)</td>
                                </tr>
                                <tr class="border-top">
                                    <td><strong>Total Amount:</strong></td>
                                    <td><strong class="text-success">₹@Model.TotalPrice.ToString("F2")</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (Model.Status == "Pending")
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Booking Pending:</strong> Your booking request is being reviewed by the equipment owner.
                            You will be notified once the owner responds.
                        </div>
                    }
                    else if (Model.Status == "Approved")
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i>
                            <strong>Booking Approved!</strong> Your booking has been confirmed.
                            Please contact the owner to arrange pickup details.
                        </div>
                    }
                    else if (Model.Status == "Rejected")
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle"></i>
                            <strong>Booking Rejected:</strong> Unfortunately, your booking request was not approved.
                            You can try booking different equipment or contact the owner for more information.
                        </div>
                    }
                    else if (Model.Status == "Completed")
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-check2-all"></i>
                            <strong>Booking Completed:</strong> This rental has been completed successfully.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Equipment" asp-action="Details" asp-route-id="@Model.EquipmentId"
                           class="btn btn-outline-primary">
                            <i class="bi bi-eye"></i> View Equipment Details
                        </a>

                        @if (Model.Status == "Pending")
                        {
                            <button class="btn btn-outline-danger">
                                <i class="bi bi-x-circle"></i> Cancel Booking
                            </button>
                        }

                        <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to My Bookings
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Owner Contact</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>@Model.Equipment?.Owner?.FirstName @Model.Equipment?.Owner?.LastName</strong>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Equipment?.Owner?.PhoneNumber))
                    {
                        <div class="mb-2">
                            <i class="bi bi-telephone"></i> @Model.Equipment?.Owner?.PhoneNumber
                        </div>
                    }
                    <div class="mb-2">
                        <i class="bi bi-envelope"></i> @Model.Equipment?.Owner?.Email
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Equipment?.Location))
                    {
                        <div class="mb-0">
                            <i class="bi bi-geo-alt"></i> @Model.Equipment?.Location
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>